<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_home">

    <android.support.v4.widget.DrawerLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/activity_broadcasting_list_swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_container_list_broadcasting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </android.support.v4.widget.SwipeRefreshLayout>



        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:layout_gravity="start"
            android:background="#eeed"
            android:gravity="top">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/activity_broadcasting_list_imageView_profile"
                android:layout_marginTop="50dp"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:src="@drawable/profile"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/activity_broadcasting_list_textView_id"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="아이디"
                android:textColor="#000"/>

            <Button
                android:id="@+id/activity_broadcasting_list_button_start_broadcast"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="방송하기"
                android:background="#eeed"/>




        </LinearLayout>






    </android.support.v4.widget.DrawerLayout>



</android.support.constraint.ConstraintLayout>