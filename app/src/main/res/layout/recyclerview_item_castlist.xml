<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/recyclerView_item_broadcasting_list_linearLayout_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/recyclerView_item_broadcasting_list_imageView_thumbnail"
            android:layout_width="60dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/recyclerView_item_broadcasting_list_textView_title_broadcast"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="방송제목"
                android:textSize="22dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/recyclerView_item_broadcasting_list_textView_id_broadcaster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방송자 이름"
                    android:textSize="15dp"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/recyclerView_item_broadcasting_list_textView_num_viewer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12명 시청중"
                    android:textSize="15dp"
                    android:layout_weight="0.5"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>